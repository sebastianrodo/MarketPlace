<div class="top-space">
  <div class="container">
    <h1 class="be-white">USERS</h1>
    <table class="table" style="box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.15)">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">CellPhone</th>
          <th scope="col">Address</th>
          <th scope="col">Show</th>
          <th scope="col">Delete</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>

          <% @users.each do |user| %>
            <tr class="table-light">
              <th scope="row"><%= user.id %></th>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.cellphone %></td>
              <td><%= user.address %></td>
              <td>
                <button type="button"class="btn btn-success" >
                  <%=  link_to 'Edit', "users/#{user.id}",
                        style:"color:white; text-decoration:none;" %>
                </button>
              </td>
              <td>
                <center>
                  <button type="button" class="btn btn-danger">
                    <%= link_to "Delete",
                        user,
                        method: :delete,
                        style:"color:white; text-decoration:none;" %>
                  </button>
                </center>
             </td>
             <td>
              <center>
                <button type="button" class="btn btn-primary">
                  <%=  link_to 'Edit', "users/#{user.id}/edit",
                        style:"color:white; text-decoration:none;" %>
                </button>
              </center>
           </td>
             </tr>
          <%end%>
      </tbody>
    </table>
    <%=  link_to '<button type="button"
                          class="btn col be-white"
                          style="background-color:#6572b8;" >Create User
                  </button>'.html_safe, "users/sign_up"
    %>

  </div>
</div>
